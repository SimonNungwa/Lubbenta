<head>
    <!-- Tailwind CSS CDN -->
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="/css/output.css">
    <!-- Font Awesome CDN for icons -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
</head>

<body>
    <!-- Header (Lubbenta and Account Button hidden on small screens) -->
    <header class="bg-white shadow-md flex justify-around items-center">
        <!-- Lubbenta (Hidden on small screens) -->
        <section class="text-2xl font-bold hidden md:block">
            <a href="/">Lubbenta</a>
        </section>

        <!-- Search Bar (Full width on small screens) -->
        <section class="w-full max-w-lg">
            {{> searchBar }}
        </section>
            <!-- Account Button (Hidden on small screens) -->
            <div class="relative text-left hidden md:block">
                <button
                    type="button"
                    class="flex items-center bg-red-600 text-white px-4 py-4 rounded-full shadow-md
                        hover:bg-red-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-500"
                    id="accountButton"
                    aria-expanded="true"
                    aria-haspopup="true"
                >
                    <i class="fas fa-user mr-2"></i>
                    <i class="fas fa-bars ml-2"></i>
                </button>

                <!-- Dropdown Menu -->
                <div 
                    class="hidden absolute right-0 mt-2 w-48 bg-white rounded-md shadow-lg z-10" 
                    id="dropdownMenu"
                >
                    <ul class="py-1">
                        <li><a href="/login" class="block px-4 py-2 text-gray-700 hover:bg-gray-100">Login</a></li>
                        <li><a href="/register" class="block px-4 py-2 text-gray-700 hover:bg-gray-100">Register</a></li>
                        <hr>
                        <li><a href="/settings" class="block px-4 py-2 text-gray-700 hover:bg-gray-100">Settings</a></li>
                    </ul>
                </div>
            </div>

    </header>

    <!-- Bottom Navigation for Small Screens -->
    <nav class="fixed bottom-0 w-full bg-white shadow-md md:hidden">
        <div class="flex justify-center space-x-12 py-2">
            <a href="/auctions" class="text-center flex flex-col items-center text-gray-600 hover:text-red-600">
                <i class="fas fa-gavel text-2xl"></i>
                <span class="text-xs">Auctions</span>
            </a>
            <a href="/cart" class="text-center flex flex-col items-center text-gray-600 hover:text-red-600">
                <i class="fas fa-shopping-cart text-2xl"></i>
                <span class="text-xs">Cart</span>
            </a>
            <a href="/login" class="text-center flex flex-col items-center text-gray-600 hover:text-red-600">
                <i class="fas fa-user text-2xl"></i>
                <span class="text-xs">Login</span>
            </a>
        </div>
    </nav>

    <!-- JavaScript for dropdown -->
    <script>
        const accountButton = document.getElementById('accountButton');
        const dropdownMenu = document.getElementById('dropdownMenu');

        accountButton.addEventListener('click', function() {
            dropdownMenu.classList.toggle('hidden');
        });

        // Close the dropdown if clicked outside
        document.addEventListener('click', function(event) {
            if (!accountButton.contains(event.target)) {
                dropdownMenu.classList.add('hidden');
            }
        });
    </script>
</body>
